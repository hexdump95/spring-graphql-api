extend type Query {
    cities: [City]
    city(id: String): City
}

extend type Mutation {
    createCity(city: CityCreate): City
    updateCity(id: String, city: CityUpdate): City
    deleteCity(id: String): Boolean
}

input CityCreate {
    id: String
    name: String!
}

input CityUpdate {
    name: String!
}

type City {
    id: String
    name: String
}
